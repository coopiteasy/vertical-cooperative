<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="es_iban_template" name="es_iban_template">
        <div
            class="form-group field-bank_account"
            t-attf-class="form-group #{error and 'iban' in error and 'has-error' or ''}"
            name="iban_container"
        >
            <label for="iban">Bank Account Number</label>
            <input
                class="form-control form-control-sm"
                type="text"
                name="iban"
                id="iban"
                required="True"
                t-att-readonly="logged"
                t-attf-value="#{iban or ''}"
                placeholder="ES9000246912501234567891"
            />

        </div>
    </template>

    <template id="es_vat_template" name="es_vat_template">
        <div
            class="form-group"
            t-attf-class="form-group #{error and 'vat' in error and 'has-error' or ''}"
            name="vat_container"
        >
            <label for="vat">VAT</label>
            <input
                type="text"
                class="form-control form-control-sm"
                name="vat"
                placeholder="Y5643925S"
                required="True"
            />
        </div>
    </template>

    <template
        id="becomecooperator"
        inherit_id="easy_my_coop_website.becomecooperator"
        name="becomecooperator"
    >
        <xpath
            expr="//t[@t-call='easy_my_coop_website.contact_template']"
            position="after"
        >
            <t t-call="easy_my_coop_es.es_iban_template" />
            <t t-call="easy_my_coop_es.es_vat_template" />
        </xpath>
    </template>

    <template
        id="becomecompanycooperator"
        inherit_id="easy_my_coop_website.becomecompanycooperator"
        name="becomecompanycooperator"
    >
        <xpath expr="//div[@name='confirm_email_container']" position="after">
            <t t-call="easy_my_coop_es.es_iban_template" />
            <t t-call="easy_my_coop_es.es_vat_template" />
        </xpath>
    </template>

    <template
        id="become_cooperator_es_share_div"
        inherit_id="easy_my_coop_website.shares_template"
        name="Removing Share div"
    >
        <xpath expr="//div[@name='share_div']" position="attributes">
            <attribute name="hidden">1</attribute>
        </xpath>
    </template>
</odoo>
