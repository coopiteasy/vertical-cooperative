<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template
            id="become_cooperator_es"
            inherit_id="easy_my_coop_website.becomecooperator"
            name="Become cooperator"
        >
            <xpath expr="//label[@for='iban']/.." position="after">
                <div
                    t-attf-class="form-group #{error and 'vat' in error and 'has-error' or ''}"
                >
                    <label class="col-md-3 col-sm-4 control-label" for="vat">VAT</label>
                    <div
                        class="col-md-7 col-sm-8 bottom-line"
                        style="padding-bottom:20px"
                    >
                        <input
                            type="text"
                            class="form-control"
                            name="vat"
                            placeholder="Y5643925S"
                            required="True"
                        />
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@name='share_div']" position="attributes">
                <attribute name="hidden">1</attribute>
            </xpath>
            <!-- Reversing street_name and house_number -->
            <xpath expr="//input[@name='house_number']/../.." position="replace">
                <tr>
                    <td>
                        <input
                            type="text"
                            class="form-control mandatory-field"
                            name="street_name"
                            required="True"
                            t-att-readonly="logged"
                            t-attf-value="#{street_name or ''}"
                            placeholder="calle Mayor"
                        />
                    </td>
                    <td width="3%" />
                    <td width="15%">
                        <input
                            type="text"
                            class="form-control mandatory-field"
                            name="house_number"
                            required="True"
                            t-att-readonly="logged"
                            t-attf-value="#{house_number or ''}"
                            placeholder="19"
                        />
                    </td>
                </tr>
            </xpath>
        </template>
    </data>
</odoo>
